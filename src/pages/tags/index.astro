---
import Layout from "../../layouts/Layout.astro";
import Title from "../../components/Title.astro";
import TagCard from "../../components/TagCard.astro";
import { getCollection } from "astro:content";

// const allPost = await Astro.glob("../posts/*.md");
const allPosts = await getCollection("posts");

const tags = [...new Set(allPosts.flatMap((post) => post.data.tags))];
---

<Layout title="Tags">
  <Title>
    <span slot="title"> Tags de los artículos</span>
    <span slot="subtitle"> Aquí se muestran los tags de los artículos</span>
  </Title>

  <div class="w-full flex flex-col justify-center items-center gap-5 p-5">
    {tags.map((tag) => <TagCard tag={tag} />)}
  </div>
</Layout>
