---
import { tagBg } from "../utils/styles";

const { tag } = Astro.props;
---

<a href={`/tags/${tag}`}>
  <div
    class={`w-80 sm:w-[550px] bg-slate-800 dark:bg-slate-200 border-black p-5 rounded-lg hover:bg-gradient-to-r ${tagBg[tag].hover} transition-all ease-out ${tagBg[tag].text}`}
  >
    <div>
      <p class="font-bold text-2xl capitalize">{tag}</p>
      <p class="text-lg font-thin">
        Aquí encontrarás los post relacionados con {tag}
      </p>
    </div>
  </div>
</a>
