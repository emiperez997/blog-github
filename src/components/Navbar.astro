---
import ThemeIcon from "./ThemeIcon.astro";

const location = Astro.url.pathname;

const active = "text-black dark:text-white underline underline-offset-4";
const inactive =
  "dark:text-slate-400 text-slate-700 hover:text-black dark:hover:text-white transition duration-300 ease-in-out";
---

<nav
  class="w-full bg-slate-200 text-black dark:text-white dark:bg-gray-700 p-5 px-20 flex flex-col md:flex-row justify-center gap-5"
>
  <div
    class="w-full flex justify-center md:justify-start font-bold text-xl gap-2 items-center"
  >
    <span class="dark:text-slate-400 text-slate-500">{"{"}</span>
    <span class="text-black dark:text-white">Tech Blog</span>
    <span class="text-slate-700 dark:text-white">{"}"}</span>
  </div>

  <div
    class="w-full flex flex-wrap justify-center md:justify-end items-center gap-5"
    transition:animate="initial"
  >
    <a
      href="/"
      class:list={[
        "text-lg font-semibold",
        location === "/" ? active : inactive,
      ]}
    >
      Inicio
    </a>

    <a
      href="/blog"
      class:list={[
        "text-lg font-semibold",
        location.includes("/blog") || location.includes("/posts/")
          ? active
          : inactive,
      ]}
    >
      Blog
    </a>

    <a
      href="/tags"
      class:list={[
        "text-lg font-semibold",
        location.includes("/tags") ? active : inactive,
      ]}
    >
      Tags
    </a>

    <a
      href="/about"
      class:list={[
        "text-lg font-semibold",
        location.includes("/about") ? active : inactive,
      ]}
    >
      Acerca de
    </a>
    <ThemeIcon />
  </div>
</nav>
