---
import Title from "../components/Title.astro";
import Layout from "./Layout.astro";
import Content from "../components/Content.astro";
import TagList from "../components/TagList.astro";

const { frontmatter } = Astro.props;

const allPosts = await Astro.glob("../pages/posts/*.md");

const hasNextPost = allPosts.findIndex(
  (post) => post.url === Astro.url.pathname
);
---

<Layout title={frontmatter.title}>
  <div
    class="px-10 py-20 w-full sm:w-[550px] flex flex-col justify-center items-center rounded-b-lg bg-gradient-to-t from-blue-300 to-blue-400 dark:text-white dark:bg-gradient-to-t dark:from-blue-900 dark:to-blue-950"
  >
    <h1 class="text-3xl font-bold text-center">{frontmatter.title}</h1>
    <p class="text-lg font-thin">
      Escrito por <strong class="font-bold">{frontmatter.author}</strong>
    </p>
    <TagList tags={frontmatter.tags} />
  </div>

  <Content>
    <slot />
  </Content>

  <div class="w-full flex justify-center p-5">
    <div class="w-80 sm:w-[550px] bg-slate-500 p-5 rounded-lg">
      <img src={frontmatter.image.url} alt={frontmatter.image.alt} class="" />
    </div>
  </div>

  <div class="w-full flex justify-center p-5">
    <div class="w-80 sm:w-[550px] flex justify-between items-center">
      {
        hasNextPost > 0 ? (
          <a href={allPosts[hasNextPost - 1].url} class="text-lg font-bold">
            ← Anterior
          </a>
        ) : (
          <div />
        )
      }
      {
        hasNextPost < allPosts.length - 1 && (
          <a href={allPosts[hasNextPost + 1].url} class="text-lg font-bold">
            Siguiente →
          </a>
        )
      }
    </div>
  </div>
</Layout>
